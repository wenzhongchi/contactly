{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@components/*": ["./components/*"],
            "@hooks/*": ["./hooks/*"],
            "@services/*": ["./services/*"],
            "@constants": ["./constants/*"],
            "@context/*": ["./context/*"],
            "@data/*": ["./data/*"],
            "@type/*": ["./types/*"],
            "@public/*": ["./public/*"],
            "@utils/*": ["./utils/*"],
            "@assets/*": ["./assets/*"],
            "@icons/*": ["./icons/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "**/*.tsx"]
}
